{
  "version": "0.2",
  "language": "en",
  "dictionaries": [
    "domain",
    "packages",
    "programs"
  ],
  // List of words to be always considered correct
  "dictionaryDefinitions": [
    {
      "name": "domain",
      "path": "./.config/cspell/domain.txt"
    },
    {
      "name": "packages",
      "path": "./.config/cspell/packages.txt"
    },
    {
      "name": "programs",
      "path": "./.config/cspell/programs.txt"
    }
  ],
  "ignorePaths": ["node_modules/**", ".config/cspell"]
}
